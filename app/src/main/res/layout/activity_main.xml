<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:src="@drawable/stats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/jojo"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stepping"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="120dp"
        android:text="@string/light_stepping"
        android:textColorLink="#8BC34A"
        android:backgroundTint="#6200EE"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="@+id/highTempo"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="@+id/highTempo"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dance"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="50dp"
        android:foregroundTint="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:text="@string/dance"
        app:cornerRadius="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highTempo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/highTempo"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginTop="50dp"
        android:text="@string/high_tempo"
        android:backgroundTint="#6200EE"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="@+id/dance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dance"
        app:layout_constraintTop_toBottomOf="@+id/stepping" />

    <View
        android:id="@+id/topColorBar"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#6200EE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/exercises"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:background="#6200EE"
        android:text="Exercises"
        android:textColor="#EFEFEF"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectexercise"
        android:layout_width="304dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="8dp"
        android:text="Select your exercise!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#fffFff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/jojo"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bizarre"
        app:layout_constraintTop_toTopOf="@+id/stats"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home2" />

    <ImageButton
        android:id="@+id/bizarre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jojo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/use_xs" />


</androidx.constraintlayout.widget.ConstraintLayout>