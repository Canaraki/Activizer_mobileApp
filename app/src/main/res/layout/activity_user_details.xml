<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdgeLength="10dp"
    tools:context=".UserDetails">

    <View
        android:id="@+id/topColorBar"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#6200EE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="@color/white"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintTop_toTopOf="@+id/topColorBar"
        app:layout_constraintBottom_toBottomOf="@+id/topColorBar"
        app:layout_constraintStart_toStartOf="@+id/topColorBar"
        app:layout_constraintEnd_toEndOf="@+id/topColorBar"
        tools:text="Hello" />


    <FrameLayout
        android:id="@+id/info_frame"
        android:layout_width="297dp"
        android:layout_height="291dp"
        android:background="#8BC34A"
        app:layout_constraintTop_toBottomOf="@+id/topColorBar"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="195dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/name_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Name:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mail_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="E-mail:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/age_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Birth date:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Gender:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/weigth_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="195dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Weight:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/height_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Height:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="male" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="#FF5252"
        android:textColor="#FFFFFF"
        app:cornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/info_frame"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintTop_toBottomOf="@id/info_frame"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toEndOf="@+id/logoutButton"
        app:layout_constraintEnd_toEndOf="parent" />


    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/stats2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/stats"
            android:contentDescription="Stats" />

        <ImageButton
            android:id="@+id/home2"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/home2"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/use_xs"
            android:contentDescription="Profile" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>