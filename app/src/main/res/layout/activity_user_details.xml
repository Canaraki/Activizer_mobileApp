<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdgeLength="10dp"
    tools:context=".UserDetails">

    <ImageButton
        android:id="@+id/home2"
        android:layout_width="109dp"
        android:layout_height="98dp"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintEnd_toStartOf="@+id/user2"
        app:layout_constraintStart_toEndOf="@+id/stats2"
        app:layout_constraintTop_toTopOf="@+id/stats2"
        app:srcCompat="@drawable/home2" />

    <ImageButton
        android:id="@+id/user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="false"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:cropToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home2"
        app:layout_constraintTop_toTopOf="@+id/home2"
        app:srcCompat="@drawable/use_xs" />

    <ImageButton
        android:id="@+id/stats2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:src="@drawable/stats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/home2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/User"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:background="#FFC107"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/poppins_bold"
        android:foregroundTint="#FFFFFF"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello"
        android:text="Hello"/>

    <FrameLayout
        android:id="@+id/info_frame"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:background="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/User">

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="195dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/name_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Name:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mail_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="E-mail:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/age_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Birth date:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Gender:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/weigth_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="195dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Weight:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/height_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Height:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            tools:text="male" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>